- if controller_name != 'sessions'
  = link_to "#{t '.Log_in'}", new_session_path(resource_name), class: "btn btn-default btn-block fl_li"
  %br/
- if devise_mapping.registerable? && controller_name != 'registrations'
  = link_to "#{t '.Sign_up'}", new_registration_path(resource_name), class: "btn btn-default btn-block fl_gh"
  %br/
- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
  = link_to "#{t '.Forgot_your_password'}", new_password_path(resource_name), class: "btn btn-default btn-block fl_gh"
  %br/
- if devise_mapping.confirmable? && controller_name != 'confirmations'
  = link_to "#{t '.Didnt_receive_confirmation_instructions'}", new_confirmation_path(resource_name),class: "btn btn-default  btn-block fl_gh"
  %br/
- if devise_mapping.omniauthable?
  = link_to "#{t '.twitter_login'}", user_twitter_omniauth_authorize_path, class: "btn btn-block btn-lg fl_tw2 fa fa-twitter"
  = link_to "#{t '.instagram_login'}", user_instagram_omniauth_authorize_path, class: "btn btn-block btn-lg fl_ig2 fa fa-instagram"
