.form-wrapper
  %h2= t '.title'
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .form-item
      = f.email_field :email, autofocus: true, placeholder: "#{t '.mail_address'}"
    .form-item
      = f.password_field :password, autocomplete: "off", placeholder: "#{t '.password'}"
    .actions
      = f.submit "#{t '.title'}", class: "btn btn-default btn-block fl_li"
  .form-footer
    = render "devise/shared/links"
