.form-wrapper
  %h2= t '.title'
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!
    .form-item
      = f.email_field :email, autofocus: true, placeholder: "#{t '.mail_address'}"
    .form-item
      = f.text_field :name, placeholder: "#{t '.user_name'}"
    .form-item
      - if @minimum_password_length
        = f.password_field :password, autocomplete: "off", placeholder: "#{t('.characters_minimun', minimum_password_length: @minimum_password_length)}"
    .form-item
      = f.password_field :password_confirmation, autocomplete: "off", placeholder: "#{t '.password_confirmation'}"
    .button-panel
      = f.submit "#{t '.title'}", class: "btn btn-default btn-block fl_gh"
  .form-footer
    = render "devise/shared/links"
