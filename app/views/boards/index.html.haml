%h2= t '.title'
= link_to "#{t '.create_new_thread'}", new_board_path, class: "btn btn-primary"

.table-responsive
  %table.table.table-striped.table-hover
    %thead
      %tr
        %th= t '.thread_title'
        %th= t '.created_at'
    %tbody
      - @boards.each do |board|
        %tr
          %td= link_to "#{board.title}", board_path(board)
          %td= board.created_at.strftime("%Y-%m-%d")
