.col-sm-6
  = form_for(@board) do |f|
    = render 'shared/errors', object: @board
    .field
    = link_to "#{t '.back_to_thread_list'}", boards_path
    .field
      = f.label :title
      = f.text_field :title, class: "form-control"
      = f.hidden_field :user_id, value: current_user.id
    .button-field
    = f.submit "#{t '.board_create'}", class: "btn btn-primary btn-block"
