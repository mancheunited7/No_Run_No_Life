%h2= t '.title'
.table-responsive
  %table.table.table-striped.table-hover.table-bordered
    %body
      %tr
        %td= t '.run_day'
        %td= @practice.run_record_day
      %tr
        %td= t '.run_distance'
        %td= run_distance(@practice)
      %tr
        %td= t '.run_time'
        %td= run_time(@practice)
      %tr
        %td= t '.weather'
        %td= @practice.weather_condition.day_weather
      %tr
        %td= t '.temperature'
        %td= day_temperature(@practice)
      %tr
        %td= t '.humidity'
        %td= day_humidity(@practice)
      %tr
        %td= t '.wind_speed'
        %td= day_wind_speed(@practice)
      %tr
        %td= t '.heart_rate'
        %td= @practice.body_state.heart_rate
      %tr
        %td= t '.weight'
        %td= day_weight(@practice)
      %tr
        %td= t '.body_fat'
        %td= day_body_fat(@practice)
      %tr
        %td= t '.run_content'
        %td= @practice.run_content
= link_to "#{t '.back_to_mypage'}", mypages_path, class: "btn btn-primary"
